timeStr=$(date "+%H:%M:%S")

# ----------------------------------------------------------------------
# MAIN Main main
# ----------------------------------------------------------------------
printf "\n"
printf "$dashline\n"
printf "$dashline\n"
printf "D::$ver::$dayStr::$dateStr::\n"
printf "\n"

