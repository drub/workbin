#! /bin/bash

str=$*
if [[ -z $str ]]; then
	str="EVENT"
fi

readonly progVer="4.1"

dashline="# ----------------------------------------------------------------------"

datestr=$(date "+%Y-%m-%d::%H.%M.%S::%Z::%a")

printf "\n"
printf "$dashline\n"
printf "EVENT::$progVer::$datestr::$str::\n"
printf "\n"
printf "Topic: \n"
printf "Host: \n"
printf "Participants: \n"
printf "\n"
printf "\n"
printf "$dashline\n"
printf "\n"

exit	# This prevents anything following from being executed.


### ======================================================================
### History
### ======================================================================

