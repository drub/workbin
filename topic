#! /bin/bash

str=$*
if [[ -z $str ]]; then
	str="TOPIC"
fi

progVer="1.0"

dashline="# ----------------------------------------------------------------------"

datestr=$(date "+%Y-%m-%d::%a")

printf "\n"
printf "$dashline\n"
printf "TOPIC::$progVer::$datestr::$str::\n"
printf "\n"
printf "\n"
printf "$dashline\n"
printf "\n"

exit    # So history can follow

# ----------------------------------------------------------------------
# ----------------------------------------------------------------------
# History
# ----------------------------------------------------------------------
# ----------------------------------------------------------------------

# ----------------------------------------------------------------------
# Ver 1.0
# ----------------------------------------------------------------------

# ----------------------------------------------------------------------
TOPIC::1.0::2017-11-28::Tue::TOPIC::


# ----------------------------------------------------------------------


